	 */
	public class BaseStat 
	{
		
		///////////////////////////////////////////////////////////////////////////////////////////////////////
		//				Attributes of the Class
		///////////////////////////////////////////////////////////////////////////////////////////////////////
		
		private var _name:String;					//Name of the Stat (use for exemple Main.STATS_NAMES[Main.STRENGTH])
		private var _ammount:int;					//Base ammount of points of the stat
		private var _mult:int;						//Archetype multiplicator, used for the level up
		private var _finalAmmount:int;				//Final number of points of the stat
		private var _mod:int; 						//modificator of the weapon or of a skill
		
		///////////////////////////////////////////////////////////////////////////////////////////////////////
		//				Base Constructor
		///////////////////////////////////////////////////////////////////////////////////////////////////////
		
		public function BaseStat(name:String, mult:int = 0, mod:int = 0, level:int = 1) 
		{
			_name = name;
			_mult = mult;
			_mod = mod;
			LevelUp(level);
		}
		
		///////////////////////////////////////////////////////////////////////////////////////////////////////
		//				Basic Setters And Getters
		///////////////////////////////////////////////////////////////////////////////////////////////////////
		
		public function get mod():int 
		{
			return _mod;
		}
		
		public function set mod(value:int):void 
		{
			_mod = value;
		}
		
		public function get finalAmmount():int 
		{
			return _finalAmmount;
		}
		
		public function set finalAmmount(value:int):void 
		{
			_finalAmmount = value;
		}
		
		public function get name():String 
		{
			return _name;
		}
		
		public function get mult():int 
		{
			return _mult;
		}
		
		public function set mult(value:int):void 
		{
			_mult = value;
		}
		
		public function get ammount():int 
		{
			return _ammount;
		}
		
		
		///////////////////////////////////////////////////////////////////////////////////////////////////////
		//				Custom Functions
		///////////////////////////////////////////////////////////////////////////////////////////////////////
		
		///////////////////////////////////////////////////////////////////////////////////////////////////////
		//				Set the final value of the function
		///////////////////////////////////////////////////////////////////////////////////////////////////////
		
		public function CalculateFinal():void
		{
			_finalAmmount = _ammount + _mod;
		}
		
		///////////////////////////////////////////////////////////////////////////////////////////////////////
		//				Function called at each level up of the character its attached to
		///////////////////////////////////////////////////////////////////////////////////////////////////////
		
		public function LevelUp( level:int) : void
		{
			_ammount = level * _mult
			CalculateFinal();
		}
		
	}

}